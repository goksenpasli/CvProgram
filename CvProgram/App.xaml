                                        Fill="#FF157EFB"
                                        Stretch="Fill" />
                                    <TextBlock
                                        Canvas.Left="4"
                                        Canvas.Top="12"
                                        FontSize="10"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="{Binding Mode=OneWay}" />
                                </Canvas>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <i:Interaction.Triggers>
                            <ei:DataTrigger
                                Binding="{Binding Filter.Length}"
                                Comparison="NotEqual"
                                Value="0">
                                <ei:ChangePropertyAction PropertyName="BorderThickness" Value="0.2" />
                                <ei:ChangePropertyAction PropertyName="BorderBrush" Value="yellow" />
                            </ei:DataTrigger>
                            <ei:DataTrigger
                                Binding="{Binding Filter.Length}"
                                Comparison="Equal"
                                Value="0">
                                <ei:ChangePropertyAction PropertyName="BorderThickness" Value="0.2" />
                                <ei:ChangePropertyAction PropertyName="BorderBrush" Value="{x:Null}" />
                            </ei:DataTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                    <Image
                        Width="16"
                        VerticalAlignment="Center"
                        Source="Icons/shell32_240.png">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <ei:ChangePropertyAction
                                    PropertyName="SelectedItem"
                                    TargetObject="{Binding ElementName=CbFilter, Mode=OneWay}"
                                    Value="{x:Null}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                </StackPanel>
            </ControlTemplate>
            <Style TargetType="HeaderedContentControl">
                <Setter Property="IsTabStop" Value="False" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>